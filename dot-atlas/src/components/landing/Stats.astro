---
/* Stats.astro — versión compacta y alineada */
---

<section class="stats" aria-labelledby="stats-title">
  <div class="card">
    <div class="copy">
      <h2 id="stats-title">
        Ecosystem Growth <span class="nowrap">at brightest glance</span>
      </h2>
      <p class="subtitle">
        Dive into key growth metrics showcasing the Polkadot ecosystem's rapid evolution.
      </p>

      <div class="grid" role="list">
        <div class="item" role="listitem">
          <div class="pin" aria-hidden="true"></div>
          <div class="number">100<sup>+</sup></div>
          <div class="label">Projects Deployed</div>
        </div>

        <div class="item" role="listitem">
          <div class="pin" aria-hidden="true"></div>
          <div class="number">10<sup>+</sup></div>
          <div class="label">DAOs Created</div>
        </div>

        <div class="item" role="listitem">
          <div class="pin" aria-hidden="true"></div>
          <div class="number">1000<sup>+</sup></div>
          <div class="label">Developers Community</div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
/* -------------------- Tokens -------------------- */
:root{
  --radius: 24px;
  --gap: 2rem;
  --accent: #ff2670;
  --accent-2: #f40d5f;

  --text-dark: #0f0f12;
  --text-light: #f7f7f8;
  --muted-dark: rgba(255,255,255,.72);
  --muted-light: rgba(15,15,18,.68);
  --card-dark: rgba(255,255,255,.04);
  --card-light:#fff;
  --stroke-dark: rgba(255,255,255,.08);
  --stroke-light: rgba(15,15,18,.08);
}

:root[data-theme="dark"]{
  --text: var(--text-light);
  --muted: var(--muted-dark);
  --card: var(--card-dark);
  --stroke: var(--stroke-dark);
  --shadow: 0 10px 30px rgba(0,0,0,.35);
  --glow: 0 0 100px rgba(255,38,112,.16);
}
:root[data-theme="light"]{
  --text: var(--text-dark);
  --muted: var(--muted-light);
  --card: var(--card-light);
  --stroke: var(--stroke-light);
  --shadow: 0 10px 30px rgba(0,0,0,.06);
  --glow: 0 0 100px rgba(255,38,112,.12);
}

/* -------------------- Layout -------------------- */
.stats{ padding: clamp(2.25rem, 5vw, 5rem) 0; color: var(--text); }

.card{
  position: relative;
  border-radius: var(--radius);
  background: var(--card);
  border: 1px solid var(--stroke);
  box-shadow: var(--shadow);
  overflow: hidden;
  isolation: isolate;

  /* 1fr texto / columna arte compacta */
  display: grid;
  grid-template-columns: 1fr auto;
  align-items: stretch;
}

.copy{
  padding: clamp(1.75rem, 4vw, 3rem) clamp(1.25rem, 3vw, 2.25rem);
  z-index: 1;
}

h2{
  margin: 0 0 .75rem 0;
  font-weight: 800;
  letter-spacing: -0.02em;
  line-height: 1.05;
  font-size: clamp(2rem, 3.6vw, 3.25rem);
}
.nowrap{ white-space: nowrap; }

.subtitle{
  margin: 0 0 2rem 0;
  max-width: 48ch;
  color: var(--muted);
  font-size: clamp(.95rem, 1.6vw, 1.125rem);
}

/* -------------------- Grid de stats -------------------- */
.grid{
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: var(--gap);
  align-items: start;
}

.item{
  position: relative;
  padding-top: 1.25rem;
  border-top: 1px dashed var(--stroke);
}

/* pin + línea */
.pin{
  position: absolute;
  top: 0; left: 0;
  width: 10px; height: 10px;
  border-radius: 999px;
  background: var(--accent);
  transform: translateY(-50%);
  box-shadow: 0 0 0 4px color-mix(in srgb, var(--accent) 24%, transparent);
}

/* NÚMEROS: alineación perfecta */
.number{
  /* caja estable */
  --num-size: clamp(2.25rem, 5vw, 3.6rem);
  display: inline-flex;            /* el sup ya no deforma la línea */
  align-items: baseline;
  font-size: var(--num-size);
  min-height: calc(var(--num-size) * 1.05);
  line-height: 1;

  font-weight: 900;
  letter-spacing: -0.02em;
  font-variant-numeric: tabular-nums lining-nums; /* ancho fijo */
  background: linear-gradient(92deg, var(--accent), var(--accent-2));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  text-shadow: 0 0 1px rgba(0,0,0,.15);
}
.number sup{
  position: relative;
  top: -0.25em;    /* sube el “+” sin tocar la línea */
  margin-left: .05em;
  line-height: 0;
  font-size: .45em;
}

.label{
  margin-top: .35rem;
  font-size: clamp(.95rem, 1.6vw, 1.125rem);
  opacity: .9;
}

/* -------------------- Arte (png más pequeño) -------------------- */
.art{
  position: relative;
  /* ancho máximo controlado; evita espacios muertos */
  width: clamp(160px, 22vw, 260px);
  min-height: 240px;          /* más compacto */
  margin: auto clamp(.75rem, 2vw, 1.25rem) auto 0;
}
.orb{
  position: absolute;
  inset: -15% -30% -20% -10%;
  filter: blur(36px);
  opacity: .4;
  background:
    radial-gradient(40% 40% at 70% 30%, rgba(255,38,112,.35), transparent 60%),
    radial-gradient(45% 45% at 20% 75%, rgba(255,38,112,.22), transparent 60%);
  box-shadow: var(--glow);
}
.swirl{
  position: absolute;
  inset: 0;
  margin: auto;
  width: 100%;
  height: 100%;
  background-image: url('https://raw.githubusercontent.com/dablockdao/polkadot-ecosystem/refs/heads/main/dot-atlas/src/assets/atlas.png');
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
  opacity: .55;
  mix-blend-mode: screen;
}

/* -------------------- Responsive -------------------- */
@media (max-width: 980px){
  .card{ grid-template-columns: 1fr; }
  .art{
    order: 2;
    width: clamp(140px, 42vw, 200px);
    min-height: 180px;
    margin: 0 auto 1rem auto;
    opacity: .35;
  }
  .copy{ order: 1; }
}

@media (max-width: 640px){
  .grid{ grid-template-columns: 1fr; gap: 1.1rem; }
}

/* Hover sutil (solo si hay motion) */
@media (prefers-reduced-motion: no-preference){
  .swirl{ transition: transform .6s ease, opacity .3s ease; }
  .card:hover .swirl{ transform: scale(1.03) rotate(-2deg); }
}
</style>
