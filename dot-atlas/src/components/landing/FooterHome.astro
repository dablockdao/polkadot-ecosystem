<style>
/* Fonts */
@font-face {
  font-family: 'Unbounded-Light';
  src: url('./src/fonts/Unbounded-Light.woff2') format('woff2');
}

@font-face {
  font-family: 'Unbounded';
  src: url('./src/fonts/Unbounded-Regular.woff2') format('woff2');
}

/* Root Variables for Light and Dark Themes */
:root[data-theme="light"] {
  --background-color: #ffffff;
  --text-color: #000000;
}

:root[data-theme="dark"] {
  --background-color: #000000;
  --text-color: #ffffff;
}

:root[data-theme="light"] a {
  color: #000000;
}

:root[data-theme="light"] .logo {
  content: url('https://raw.githubusercontent.com/dablockdao/polkadot-ecosystem/refs/heads/main/dot-atlas/src/assets/ecosystem1.png');
}

/* General Footer Styling */
.site-footer {
  color: var(--text-color);
  padding: 3rem 0;
  border: solid 1px #2d2d2d;
  border-radius: 25px;
  background-color: var(--background-color);
}

.footer-content {
  width: 100%;
  padding: 0 2rem;
  box-sizing: border-box;
}

.footer-nav {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
  gap: 2rem;
}

.footer-col span {
  font-size: 1rem;
  font-weight: bold;
  margin-bottom: 1rem;
  text-transform: uppercase;
  color: var(--text-color);
  display: block;
  font-family: 'Unbounded';
}

.footer-col ul {
  list-style: none;
  padding: 0;
}

.footer-col li {
  margin-bottom: 0.75rem;
}

/* Links Styling */
.footer-col a {
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  font-size: 0.9rem;
  position: relative;
  font-family: 'Unbounded-Light';
  transition: color 0.2s;
}

.footer-col a::after {
  content: "";
  position: absolute;
  bottom: -2px;
  left: 0;
  width: 0;
  height: 1px;
  background-color: #ff007a;
  transition: width 0.3s ease;
}

.footer-col a:hover {
  color: #ff007a;
}

.footer-col a:hover::after {
  width: 100%;
}

.footer-col span a {
  position: relative;
  text-decoration: none;
  color: #ffffff;
  font-weight: bold;
  transition: color 0.3s ease, transform 0.3s ease;
}

.footer-col span a::after {
  content: '';
  position: absolute;
  left: 0;
  bottom: -2px;
  width: 100%;
  height: 2px;
  background: #6e7391;
  transform: scaleX(1);
  transform-origin: left;
  transition: background-color 0.3s ease;
}

.footer-col span a:hover {
  color: #ff0080;
  transform: scale(1.05);
}

.footer-col span a:hover::after {
  background: #ff0080;
}

/* Logo and Social Links */
.footer-logo {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.logo {
  content: url('https://raw.githubusercontent.com/dablockdao/polkadot-ecosystem/refs/heads/main/dot-atlas/src/assets/ecosystem2.png');
}

.social-links {
  display: flex;
  align-items: center;
  gap: 1rem;
  margin: auto 35px auto auto;
}

.social-links a {
  margin-right: 1rem;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: none;
  font-size: 0.9rem;
  transition: color 0.2s;
}

.social-links a svg {
  font-size: 33px;
}

.social-links a:hover {
  color: #ff007a;
}

/* Button Styling */
.get-in-touch {
  background-color: #ff007a;
  color: #ffffff !important;
  padding: 0.75rem 1.5rem;
  border-radius: 0.5rem;
  text-decoration: none;
  font-weight: bold;
  transition: background-color 0.2s;
}

.get-in-touch:hover {
  background-color: #e6006b;
}

/* Footer Bottom */
.footer-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 2rem;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
  padding-top: 1.5rem;
  font-family: 'Unbounded';
}

/* Responsive Styling */
@media (max-width: 768px) {
  .footer-nav {
    grid-template-columns: repeat(2, 1fr);
  }

  .footer-bottom {
    flex-direction: column;
    gap: 1rem;
  }

  .social-links a svg {
    font-size: 21px;
  }
}

</style>

