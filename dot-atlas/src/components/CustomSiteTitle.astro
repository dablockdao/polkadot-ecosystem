---
import type { Props } from '@astrojs/starlight/props';
import Default from '@astrojs/starlight/components/SiteTitle.astro';
---

<Default {...Astro.props}><slot /></Default>

<nav class="tm1">
  <a class="topLink" href="https://polkadotecosystem.com/">ATLAS</a>
  <a class="topLink" href="https://news.polkadotecosystem.com/">News</a>
  <a class="topLink" href="https://media.polkadotecosystem.com/">Media</a>
</nav>
<nav class="topMenu">
    <a class="topLink" href="/tools/">Tools</a>
    <a class="topLink" href="/dapps/">Dapps</a>
    <a class="topLink" href="/club/">Community</a>
</nav>

<style>
  .tm1 {
        border: 1px solid #6E7391;
        background-color: #000000;
        display: flex;                           
  justify-content: center;                 
  align-items: center;                     
  padding: 5px 0;                          
  border-radius: 10px;                    
  box-shadow: 0 2px 15px var(--box-shadow);  
  margin: 0 15px 0 35px;   
  transition: all .2s ease-in-out;
  }

  .tm1:hover {
    background-color: rgba(255, 38, 112, 0.1); 
  }

  :root[data-theme='light'] .tm1 {
    background-color: #ffffff;
  }

  :root[data-theme='light'] .tm1:hover {
    background-color: rgba(83, 79, 80, 0.1);  
  }

  .tm1 a {
    transition: all .2s ease-in-out;

  }
  .tm1 a:hover {
    color: #ff2670 !important;         
    background-color: transparent !important;  
    transform: scale(1.05);              

  }

	h1 {
		font-size: var(--sl-text-h1);
		line-height: var(--sl-line-height-headings);
		font-weight: 600;
		color: var(--sl-color-white);
	}

	a {
      font-family: 'Unbounded Bold', sans-serif !important;
        color: var(--sl-color-text-accent);
        padding: 0.5em;
        margin: -0.5em;
        text-decoration: none;
    }
 
    .topMenu {
  display: flex;                           
  justify-content: center;                 
  align-items: center;                     
  padding: 5px 0;                          
  border-radius: 10px;                    
  box-shadow: 0 2px 15px var(--box-shadow);  
  margin: 0 10px;                          
}


 .topLink {
  display: flex;
  flex-direction: row;
  font-size: 0.9rem;                       
  color: var(--text-light);                
  padding: 5px 10px;                       
  margin: 0 3px;                           
  text-decoration: none;                  
  border-radius: 5px;                      
  transition: background-color 0.3s, color 0.3s;  
}

 :root[data-theme='light'] .topLink {
  color: black;                           
}

:root .topLink {
  color: var(--span-dark);              
}

.topMenu .topLink:hover {
  color: var(--hover-color-light);        
  background-color: rgba(255, 38, 112, 0.1); 
}

 :root[data-theme='light'] .topLink:hover {
  color: rgb(30, 30, 32);                 
  background-color: rgba(83, 79, 80, 0.1);  
}

:root .topLink:hover {
  color: #ff2670;                         
  background-color: rgba(255, 38, 112, 0.1);  
}



@media (max-width: 768px) {

.social-icons {
    display: block !important;              
}
.topMenu {
    display: none !important;              
}
.tm1 {
    display: none !important;              
}

.social-icons > * {
    display: block !important;             
    margin-bottom: 10px;       
    width: 100%;                  
}

.topLink {
  display: inline-block !important;                   
  font-size: 0.55rem;                       
  color: var(--text-light);                
  padding: 1px 3px;                       
  margin: 0 3px;                           
  text-decoration: none;                  
  border-radius: 5px;                      
  transition: background-color 0.3s, color 0.3s;  
}
.topMenu {
    flex-direction: column !important;  
    align-items: flex-start !important; 
  }
.site-title {
  width: 75% !important;
}

}
</style>