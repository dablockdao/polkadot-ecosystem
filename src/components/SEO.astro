---
/* SEO Component - Comprehensive meta tags for better search engine visibility */
interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
  modifiedTime?: string;
  author?: string;
  keywords?: string[];
}

const {
  title = 'Polkadot Ecosystem Hub - Tools, DApps & Resources',
  description = 'Your complete guide to the Polkadot ecosystem. Discover wallets, explorers, DeFi protocols, NFT marketplaces, governance tools, and developer resources across 50+ parachains.',
  image = 'https://polkadotecosystem.com/og-image.png',
  canonical,
  type = 'website',
  publishedTime,
  modifiedTime,
  author,
  keywords = [
    'Polkadot',
    'Blockchain',
    'Web3',
    'Cryptocurrency',
    'DApps',
    'DeFi',
    'NFTs',
    'Smart Contracts',
    'Parachains',
    'DOT',
    'Kusama',
    'Cross-chain',
    'Interoperability'
  ]
} = Astro.props;

const siteUrl = 'https://polkadotecosystem.com';
const canonicalURL = canonical || new URL(Astro.url.pathname, siteUrl).href;
const imageURL = new URL(image, siteUrl).href;
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords.join(', ')} />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:site_name" content="Polkadot Ecosystem Hub" />
<meta property="og:locale" content="en_US" />

{publishedTime && <meta property="article:published_time" content={publishedTime} />}
{modifiedTime && <meta property="article:modified_time" content={modifiedTime} />}
{author && <meta property="article:author" content={author} />}

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={canonicalURL} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={imageURL} />
<meta name="twitter:site" content="@polkadot" />
<meta name="twitter:creator" content="@polkadot" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
<meta name="googlebot" content="index, follow" />
<meta name="bingbot" content="index, follow" />

<!-- Language & Region -->
<meta http-equiv="content-language" content="en" />
<meta name="geo.region" content="US" />

<!-- Schema.org markup for Google -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Polkadot Ecosystem Hub",
  "description": description,
  "url": siteUrl,
  "publisher": {
    "@type": "Organization",
    "name": "Polkadot Ecosystem Hub",
    "logo": {
      "@type": "ImageObject",
      "url": `${siteUrl}/polkadot22.png`
    }
  }
})} />
