---
/* Feature Highlight Component - Showcase key features with icons */
export interface Feature {
  icon: string;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  subtitle?: string;
  features: Feature[];
  columns?: 2 | 3 | 4;
}

const {
  title = "Why Choose Polkadot?",
  subtitle = "The most advanced blockchain ecosystem",
  features,
  columns = 3
} = Astro.props;
---

<section class="feature-highlight">
  <div class="container">
    {title && <h2 class="section-title">{title}</h2>}
    {subtitle && <p class="section-subtitle">{subtitle}</p>}

    <div class={`features-grid features-grid--${columns}`}>
      {features.map((feature) => (
        <div class="feature-card">
          <div class="feature-icon" aria-hidden="true" set:html={feature.icon} />
          <h3 class="feature-title">{feature.title}</h3>
          <p class="feature-description">{feature.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
/* ===== Feature Highlight Section ===== */
.feature-highlight {
  padding: var(--space-fluid-sm, clamp(0.75rem, 1.5vw, 1rem));
  background: transparent;
}

.container {
  max-width: 1400px;
  margin: 0 auto;
  padding: var(--space-fluid-lg, clamp(1.5rem, 3vw, 2.5rem)) var(--space-fluid-md, clamp(1rem, 2vw, 1.5rem));
  background: linear-gradient(180deg,
    color-mix(in oklab, var(--color-bg-soft, #121219) 98%, transparent),
    color-mix(in oklab, var(--color-bg, #0b0b0f) 100%, transparent));
  border: 1px solid var(--color-border-subtle, rgba(255, 255, 255, 0.08));
  border-radius: var(--radius-2xl, 24px);
  position: relative;
  overflow: hidden;
}

.container::before {
  content: "";
  position: absolute;
  inset: 0;
  background: radial-gradient(
    circle at 50% 0%,
    color-mix(in oklab, var(--color-accent-primary, #7A6F5F) 8%, transparent),
    transparent 60%
  );
  opacity: 0.6;
  pointer-events: none;
}

/* Section header */
.section-title {
  text-align: center;
  font-family: var(--font-heading, 'Optima Bold', sans-serif);
  font-size: var(--text-2xl, clamp(1.5rem, 3vw, 2rem));
  font-weight: var(--font-extrabold, 800);
  line-height: var(--leading-tight, 1.1);
  letter-spacing: -0.02em;
  margin: 0 0 var(--space-2xs, 0.5rem) 0;
  color: var(--color-text-primary, #ffffff);
  position: relative;
  z-index: 1;
}

.section-subtitle {
  text-align: center;
  font-size: var(--text-base, clamp(0.95rem, 1.5vw, 1.05rem));
  color: var(--color-text-muted, #aeb7cb);
  margin: 0 0 var(--space-lg, 2rem) 0;
  max-width: 600px;
  margin-inline: auto;
  position: relative;
  z-index: 1;
}

/* Features grid */
.features-grid {
  display: grid;
  gap: var(--space-fluid-md, clamp(1rem, 2vw, 1.5rem));
  grid-template-columns: 1fr;
  position: relative;
  z-index: 1;
}

/* Mobile: 1 column */
@media (min-width: 640px) {
  .features-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* Desktop: explicit columns based on variant */
@media (min-width: 1024px) {
  .features-grid--2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .features-grid--3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .features-grid--4 {
    grid-template-columns: repeat(4, 1fr);
  }
}

/* Feature card */
.feature-card {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  padding: var(--space-md, clamp(0.75rem, 1.5vw, 1rem));
  background: linear-gradient(180deg,
    color-mix(in oklab, var(--color-bg-soft, #121219) 98%, transparent),
    color-mix(in oklab, var(--color-bg, #0b0b0f) 100%, transparent));
  border: 1px solid var(--color-border-subtle, rgba(255, 255, 255, 0.08));
  border-radius: var(--radius-lg, 14px);
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1),
              border-color 0.3s cubic-bezier(0.4, 0, 0.2, 1),
              box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1),
              background 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  overflow: hidden;
  min-height: auto;
  backdrop-filter: blur(10px);
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08),
              0 1px 2px rgba(0, 0, 0, 0.06);
  cursor: pointer;
}

.feature-card::before {
  content: "";
  position: absolute;
  inset: 0;
  background: radial-gradient(
    circle at 50% 0%,
    color-mix(in oklab, var(--color-accent-primary, #7A6F5F) 12%, transparent),
    transparent 70%
  );
  opacity: 0;
  transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
}

.feature-card::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg,
    rgba(255, 255, 255, 0.05) 0%,
    transparent 50%);
  opacity: 0;
  transition: opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  pointer-events: none;
}

.feature-card:hover {
  transform: translateY(-6px) scale(1.02);
  border-color: color-mix(in oklab, var(--color-accent-primary, #7A6F5F) 60%, transparent);
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2),
              0 10px 20px rgba(122, 111, 95, 0.15),
              0 0 0 1px rgba(122, 111, 95, 0.1);
  background: linear-gradient(180deg,
    color-mix(in oklab, var(--color-bg-soft, #121219) 100%, transparent),
    color-mix(in oklab, var(--color-bg, #0b0b0f) 98%, var(--color-accent-primary, #7A6F5F)));
}

.feature-card:hover::before {
  opacity: 1;
}

.feature-card:hover::after {
  opacity: 1;
}

.feature-card:active {
  transform: translateY(-4px) scale(1.01);
}

/* Feature icon */
.feature-icon {
  width: 32px;
  height: 32px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: var(--space-2xs, 0.5rem);
  transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
  flex-shrink: 0;
  color: var(--color-accent-primary, #7A6F5F);
  position: relative;
}

.feature-icon::before {
  content: "";
  position: absolute;
  inset: -8px;
  background: radial-gradient(
    circle,
    color-mix(in oklab, var(--color-accent-primary, #7A6F5F) 15%, transparent),
    transparent 70%
  );
  opacity: 0;
  transition: opacity 0.3s ease;
  border-radius: 50%;
}

.feature-icon :global(svg) {
  width: 100%;
  height: 100%;
  stroke: currentColor;
  filter: drop-shadow(0 2px 8px rgba(122, 111, 95, 0.2));
  transition: filter 0.3s ease, stroke-width 0.3s ease;
}

.feature-card:hover .feature-icon {
  transform: scale(1.15) rotate(5deg);
  animation: iconPulse 0.6s ease;
}

.feature-card:hover .feature-icon::before {
  opacity: 1;
  animation: iconGlow 1.5s ease-in-out infinite;
}

.feature-card:hover .feature-icon :global(svg) {
  filter: drop-shadow(0 4px 16px rgba(122, 111, 95, 0.5));
  stroke-width: 2.2;
}

@keyframes iconPulse {
  0%, 100% { transform: scale(1.15) rotate(5deg); }
  50% { transform: scale(1.2) rotate(5deg); }
}

@keyframes iconGlow {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.6; }
}

/* Feature content */
.feature-title {
  font-family: var(--font-heading, 'Optima Bold', sans-serif);
  font-size: var(--text-base, clamp(1rem, 1.5vw, 1.1rem));
  font-weight: var(--font-bold, 700);
  line-height: var(--leading-snug, 1.2);
  margin: 0 0 var(--space-2xs, 0.35rem) 0;
  color: var(--color-text-primary, #ffffff);
}

.feature-description {
  font-size: var(--text-sm, clamp(0.875rem, 1.2vw, 0.95rem));
  line-height: var(--leading-relaxed, 1.4);
  color: var(--color-text-muted, #aeb7cb);
  margin: 0;
}

/* ===== Light Theme ===== */
:root[data-theme="light"] .feature-highlight {
  background: var(--color-bg, #FFFFFF);
}

:root[data-theme="light"] .feature-card {
  background: linear-gradient(180deg, #FFFFFF, #F5F5F5);
  border-color: rgba(0, 0, 0, 0.08);
}

:root[data-theme="light"] .feature-card:hover {
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.15);
}

/* ===== Responsive ===== */
@media (max-width: 768px) {
  .features-grid {
    grid-template-columns: 1fr;
  }

  .section-subtitle {
    margin-bottom: var(--space-md, 1.5rem);
  }

  .container {
    padding: var(--space-lg, 1.5rem) var(--space-md, 1rem);
  }
}

/* ===== Motion Safety ===== */
@media (prefers-reduced-motion: reduce) {
  .feature-card,
  .feature-icon {
    transition: none;
  }

  .feature-card:hover,
  .feature-card:hover .feature-icon {
    transform: none;
  }
}
</style>
