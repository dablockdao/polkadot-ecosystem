---
import Button from '../ui/Button.astro';
import SilkBackground from '../effects/SilkBackground.astro';
---

<section class="hero" aria-labelledby="hero-title">
  <SilkBackground variant="subtle" speed="slow" />
  <div class="wrap">
    <h2 id="hero-title" class="title">
      All the Polkadot Ecosystem <span class="accent">Projects in One Place</span>
    </h2>

    <p class="subtitle">
      Your fast track to wallets, DApps, governance, and builder tooling across Polkadot. All in one place.
    </p>

    <div class="btn-group">
      <Button href="#listproject" variant="secondary" size="lg">List Your Project</Button>
      <Button href="#explore" variant="primary" size="lg">Explore</Button>
    </div>
  </div>
</section>

<style>
/* ===== Hero Section ===== */
.hero {
  position: relative;
  isolation: isolate;
  overflow: hidden;
  background: var(--color-bg, #0b0b0f);
  color: var(--color-text-primary, #ffffff);
  margin: var(--space-fluid-md, clamp(1rem, 2.5vw, 2rem));
  padding-block: var(--space-fluid-xl, clamp(2.5rem, 7vw, 5rem));
  min-height: 52svh;
  border: 1px solid var(--color-border-subtle, rgba(255, 255, 255, 0.08));
  border-radius: var(--radius-2xl, 24px);
}

/* Glow effect + grid pattern */
.hero::before,
.hero::after {
  content: "";
  position: absolute;
  inset: 0;
  pointer-events: none;
  z-index: -1;
}

.hero::before {
  background:
    radial-gradient(60% 50% at 55% 0%,
      color-mix(in oklab, var(--color-accent-primary, #7A6F5F) 22%, transparent) 0%,
      transparent 60%),
    linear-gradient(180deg, rgba(255, 255, 255, 0.03), transparent 55%);
}

.hero::after {
  opacity: 0.07;
  background-image:
    linear-gradient(transparent 0 98%, currentColor 98% 100%),
    linear-gradient(90deg, transparent 0 98%, currentColor 98% 100%);
  background-size: 32px 32px;
}

/* Container */
.wrap {
  max-width: 1120px;
  margin-inline: auto;
  padding-inline: var(--space-fluid-md, clamp(1rem, 4vw, 2rem));
}

/* Title */
.title {
  margin: 0 0 var(--space-sm, 1rem) 0;
  font-family: var(--font-heading, 'Optima Bold', sans-serif);
  font-weight: var(--font-extrabold, 800);
  letter-spacing: -0.02em;
  line-height: var(--leading-tight, 1.1);
  font-size: var(--text-4xl, clamp(2rem, 5.5vw, 3.2rem));
  text-wrap: balance;
}

.accent {
  display: block;
  background: linear-gradient(90deg,
    var(--color-text-primary, #ffffff),
    color-mix(in oklab, var(--color-accent-primary, #7A6F5F) 65%, white));
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

/* Subtitle */
.subtitle {
  max-width: 820px;
  margin: 0 0 var(--space-lg, 2rem) 0;
  font-size: var(--text-xl, clamp(1.05rem, 1.2vw, 1.25rem));
  line-height: var(--leading-relaxed, 1.6);
  color: var(--color-text-muted, #aeb7cb);
}

/* Button group */
.btn-group {
  display: flex;
  gap: var(--space-sm, 1rem);
  flex-wrap: wrap;
}

/* ===== Light Theme ===== */
:root[data-theme="light"] .hero {
  background: var(--color-bg, #FFFFFF);
  color: var(--color-text-primary, #000000);
  border-top-color: rgba(0, 0, 0, 0.10);
}

:root[data-theme="light"] .hero::after {
  opacity: 0.04;
}

:root[data-theme="light"] .subtitle {
  color: var(--color-text-muted, rgba(0, 0, 0, 0.6));
}
</style>
